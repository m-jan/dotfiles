" System settings
set clipboard+=unnamedplus
set noswapfile
set undofile
set undodir=$HOME/.config/nvim/undo
set undolevels=10000
set undoreload=10000
" banana

" General settings
set number
set autoindent
set expandtab
set tabstop=4
set softtabstop=4
set shiftwidth=4

" Colorscheme
colorscheme carbon

" Disable arrow keys
noremap <Up> <Nop>
noremap <Down> <Nop>
noremap <Left> <Nop>
noremap <Right> <Nop>

